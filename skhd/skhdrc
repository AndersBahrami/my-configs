# cmd - return : osascript ~/.config/skhd/iterm.scpt
cmd - return : open -na 'terminal'
cmd - 0 : open -na 'google chrome'
cmd - 1 : open -na 'google chrome' --args --profile-directory="Default" --new-window
cmd - 2 : open -na 'google chrome' --args --profile-directory="Profile 4" --new-window

shift + cmd - z : yabai -m space --focus prev
shift + cmd - x : yabai -m space --focus next

cmd - e : yabai -m space --toggle show-desktop

shift + cmd - n : yabai -m space --create && \
	index="$(yabai -m query --spaces --display | jq 'map(select(."is-native-fullscreen" == false))[-1].index')" && \
	yabai -m space --focus "${index}"

shift + alt - n : yabai -m space --create && \
	index="$(yabai -m query --spaces --display | jq 'map(select(."is-native-fullscreen" == false))[-1].index')" && \
	yabai -m window --space "${index}" && \
	yabai -m space --focus "${index}"

shift + alt - m :
	index="$(yabai -m query --spaces --display | jq 'map(select(."has-focus" == true))[0].index')" && \
	yabai -m space --destroy && \
	yabai -m space --focus "${index}" || yabai -m space --focus "$(($index - 1))" \
	&& yabai -m query --spaces --display | \
	jq -re 'map(select(."is-native-fullscreen" == false)) | length > 1' \
	&& yabai -m query --spaces | \
	jq -re 'map(select(."windows" == []).index) | reverse | .[] ' | \
	xargs -I % sh -c 'yabai -m space % --destroy'

shift + cmd - m :
	index="$(yabai -m query --spaces --display | jq 'map(select(."has-focus" == true))[0].index')" && \
	yabai -m space --destroy && \
	yabai -m space --focus "${index}" || yabai -m space --focus "$(($index - 1))" \
	&& yabai -m query --spaces --display | \
	jq -re 'map(select(."is-native-fullscreen" == false)) | length > 1' \
	&& yabai -m query --spaces | \
	jq -re 'map(select(."windows" == []).index) | reverse | .[] ' | \
	xargs -I % sh -c 'yabai -m space % --destroy'


cmd - g : yabai -m window --toggle zoom-fullscreen

# this is for use with fuzzyhome
#cmd - s [
#	"google chrome" : skhd --key "cmd + shift - h"
#]

shift + cmd - e : yabai -m window --toggle split
shift + cmd - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# swap managed window
shift + alt - up : yabai -m window --swap north
shift + alt - down : yabai -m window --swap south
shift + alt - left : yabai -m window --swap west
shift + alt - right : yabai -m window --swap east
# move managed window
shift + cmd - up : yabai -m window --warp north
shift + cmd - down : yabai -m window --warp south 
shift + cmd - left : yabai -m window --warp west
shift + cmd - right : yabai -m window --warp east
# balance size of windows
shift + cmd - 0 : yabai -m space --balance


#move window to prev and next space
shift + alt - z : yabai -m window --space prev;
shift + alt - x : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2; 
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;

# focus on space n
shift + cmd - 1 : yabai -m space --focus 1
shift + cmd - 2 : yabai -m space --focus 2
shift + cmd - 3 : yabai -m space --focus 3
shift + cmd - 4 : yabai -m space --focus 4
shift + cmd - 5 : yabai -m space --focus 5
shift + cmd - 6 : yabai -m space --focus 6

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service



shift + cmd - d : yabai -m window --resize right:20:0
shift + cmd - a : yabai -m window --resize right:-20:0
shift + cmd - d : yabai -m window --resize left:20:0
shift + cmd - a : yabai -m window --resize left:-20:0



# rotate layout clockwise
shift + cmd - r : yabai -m space --rotate 270

# flip along y-axis
shift + cmd - y : yabai -m space --mirror y-axis






